[Unit]
Description=Shard Discord Bot

[Service]
ExecStart=/usr/local/bin/shard/shard.js
Restart=always
User=nobody
# Note Debian/Ubuntu uses 'nogroup', RHEL/Fedora uses 'nobody'
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/etc/local/bin/shard

[Install]
WantedBy=multi-user.target