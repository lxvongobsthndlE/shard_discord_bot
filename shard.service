[Unit]
Description=Shard Discord Bot

[Service]
ExecStart=/home/pi/shard_discord_bot/shard.js
Restart=always
User=nobody
# Note Debian/Ubuntu uses 'nogroup', RHEL/Fedora uses 'nobody'
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/home/pi/shard_discord_bot

[Install]
WantedBy=multi-user.target